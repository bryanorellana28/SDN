datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
  createdAt DateTime @default(now())
}

model Device {
  id             Int      @id @default(autoincrement())
  ipGestion      String
  nombre         String
  sitio          String
  rack           String
  tipoEquipo     String
  marca          String
  modelo         String
  versionSoftware String
  serial         String?
  createdAt      DateTime @default(now())
}

model Site {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
}

model Brand {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
}
